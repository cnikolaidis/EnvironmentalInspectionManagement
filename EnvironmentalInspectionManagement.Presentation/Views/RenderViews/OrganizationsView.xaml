                                </DockPanel>

                                <DockPanel
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Margin="5">

                                    <TextBlock Text="Υπεύθυνος"/>

                                    <TextBox
                                    Width="Auto"
                                    Margin="10, 0, 10, 0"
                                    Text="{Binding Path=ActivityManagerName, Mode=TwoWay}"/>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="5"
                                Grid.Column="0"
                                Margin="5">

                                    <TextBlock Text="Fax"/>

                                    <TextBox
                                    helpers:NumericInputHelper.IsEnabled="True"
                                    Width="Auto"
                                    Margin="10, 0, 10, 0"
                                    Text="{Binding Path=ActivityFaxNo, Mode=TwoWay}"/>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="5">

                                    <TextBlock Text="E-Mail"/>

                                    <TextBox
                                    Width="Auto"
                                    Margin="10, 0, 10, 0"
                                    Text="{Binding Path=ActivityMailAddress, Mode=TwoWay}"/>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="5">

                                    <TextBlock Text="Τηλέφωνο 1"/>

                                    <TextBox
                                    helpers:NumericInputHelper.IsEnabled="True"
                                    Width="Auto"
                                    Margin="10, 0, 10, 0"
                                    Text="{Binding Path=PhoneNo1, Mode=TwoWay}"/>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="5">

                                    <TextBlock Text="Τηλέφωνο 2"/>

                                    <TextBox
                                    helpers:NumericInputHelper.IsEnabled="True"
                                    Width="Auto"
                                    Margin="10, 0, 10, 0"
                                    Text="{Binding Path=PhoneNo2, Mode=TwoWay}"/>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="7"
                                Grid.Column="0"
                                Margin="5">

                                    <TextBlock Text="ΕΓΣΑ Χ"/>

                                    <TextBox
                                    helpers:NumericInputHelper.IsEnabled="True"
                                    Width="Auto"
                                    Margin="10, 0, 10, 0"
                                    Text="{Binding Path=CoordX, Mode=TwoWay}"/>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="7"
                                Grid.Column="1"
                                Margin="5">

                                    <TextBlock Text="ΕΓΣΑ Υ"/>

                                    <TextBox
                                    helpers:NumericInputHelper.IsEnabled="True"
                                    Width="Auto"
                                    Margin="10, 0, 10, 0"
                                    Text="{Binding Path=CoordY, Mode=TwoWay}"/>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="8"
                                Grid.Column="0"
                                Margin="5">

                                    <TextBlock Text="Π.Ε."/>

                                    <ComboBox
                                    Text="{Binding Path=ActivityRegionalUnitySelected.Text, Mode=TwoWay}"
                                    ItemsSource="{Binding RegionalUnitiesOptions}"
                                    SelectedItem="{Binding ActivityRegionalUnitySelected}">

                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>

                                    </ComboBox>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="8"
                                Grid.Column="1"
                                Margin="5">

                                    <TextBlock Text="Δ.Ο.Υ."/>

                                    <ComboBox
                                    Text="{Binding Path=ActivityTaxOfficeSelected.Text, Mode=TwoWay}"
                                    ItemsSource="{Binding TaxOfficeOptions}"
                                    SelectedItem="{Binding ActivityTaxOfficeSelected}">

                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>

                                    </ComboBox>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="9"
                                Grid.Column="0"
                                Margin="5">

                                    <TextBlock Text="Κ. Έργου"/>

                                    <ComboBox
                                    Text="{Binding Path=WorkCategorySelected.Text, Mode=TwoWay}"
                                    ItemsSource="{Binding WorkCategoryOptions}"
                                    SelectedItem="{Binding WorkCategorySelected}">

                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>

                                    </ComboBox>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="9"
                                Grid.Column="1"
                                Margin="5">

                                    <TextBlock Text="ΥπΚ. Έργου"/>

                                    <ComboBox
                                    Text="{Binding Path=WorkSubcategorySelected.Text, Mode=TwoWay}"
                                    ItemsSource="{Binding WorkSubcategoryOptions}"
                                    SelectedItem="{Binding WorkSubcategorySelected}">

                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>

                                    </ComboBox>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="10"
                                Grid.Column="0"
                                Margin="5">

                                    <TextBlock Text="Κ. Κ.Α.Δ."/>

                                    <ComboBox
                                    Text="{Binding Path=NaceCodeSectorSelected.Text, Mode=TwoWay}"
                                    ItemsSource="{Binding NaceCodeSectorOptions}"
                                    SelectedItem="{Binding NaceCodeSectorSelected}">

                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>

                                    </ComboBox>

                                </DockPanel>

                                <DockPanel
                                Grid.Row="10"
                                Grid.Column="1"
                                Margin="5">

                                    <TextBlock Text="Κ.Α.Δ."/>

                                    <ComboBox
                                    Text="{Binding Path=NaceCodeSelected.Text, Mode=TwoWay}"
                                    ItemsSource="{Binding NaceCodeOptions}"
                                    SelectedItem="{Binding NaceCodeSelected}">

                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>

                                    </ComboBox>

                                </DockPanel>

                                <Grid
                                Grid.Row="11"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Right">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button
                                Grid.Row="0"
                                Grid.Column="0"
                                Command="{Binding Path=AddActivityCommand}">

                                        <Image
                                        Width="20"
                                        Height="20"
                                        Source="../../Images/add.png"/>

                                    </Button>

                                    <Button
                                Grid.Row="0"
                                Grid.Column="1"
                                Command="{Binding Path=UpdateActivityCommand}">

                                        <Image
                                        Width="20"
                                        Height="20"
                                        Source="../../Images/save.png"/>

                                    </Button>

                                    <Button
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Command="{Binding Path=ClearActivityInputsCommand}">

                                        <Image
                                        Width="20"
                                        Height="20"
                                        Source="../../Images/erase.png"/>

                                    </Button>

                                </Grid>

                            </Grid>

                            <ScrollViewer.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#5FFF"/>
                                <Style TargetType="{x:Type ScrollBar}">
                                    <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
                                    <Setter Property="Background" Value="Transparent"/>

                                    <Setter Property="Template">
                                        <Setter.Value>

                                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                                <Grid x:Name="GridRoot" Width="8" Background="{TemplateBinding Background}">

                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>

                                                    <Track
                                                        x:Name="PART_Track"
                                                        Grid.Row="0"
                                                        IsDirectionReversed="true"
                                                        Focusable="false">

                                                        <Track.Thumb>
                                                            <Thumb
                                                                x:Name="Thumb"
                                                                Background="#FFFF"
                                                                BorderThickness="0">

                                                                <Thumb.Resources>
                                                                    <Style TargetType="{x:Type Border}">
                                                                        <Setter Property="CornerRadius" Value="5"/>
                                                                    </Style>
                                                                </Thumb.Resources>

                                                            </Thumb>
                                                        </Track.Thumb>

                                                    </Track>
                                                </Grid>

                                                <ControlTemplate.Triggers>

                                                    <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                                        <Setter
                                                            Value="{DynamicResource ButtonSelectBrush}"
                                                            TargetName="Thumb"
                                                            Property="Background"/>
                                                    </Trigger>

                                                    <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                                        <Setter
                                                            Value="{DynamicResource DarkBrush}"
                                                            TargetName="Thumb"
                                                            Property="Background"/>
                                                    </Trigger>

                                                    <Trigger Property="IsEnabled" Value="false">
                                                        <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>

                                                    <Trigger Property="Orientation" Value="Horizontal">
                                                        <Setter Property="Width" Value="Auto"/>
                                                        <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                                    </Trigger>

                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>

                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ScrollViewer.Resources>

                        </ScrollViewer>
                        
                    </TabItem>

                </TabControl>

            </Border>

        </Grid>

    </Grid>
    
</UserControl>
