                                                    <TextBox Text="{Binding Path=LicenseForAutopsyNotes, Mode=TwoWay}"/>

                                                </DockPanel>

                                                <DockPanel
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Margin="5">

                                                    <TextBlock
                                                    VerticalAlignment="Center"
                                                    Text="Ημ/νία άδειας"/>

                                                    <DatePicker SelectedDate="{Binding Path=LicenseForAutopsyDateLicensed}">
                                                        <DatePicker.Resources>
                                                            <Style TargetType="{x:Type DatePicker}">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Setter Property="BorderThickness" Value="0"/>
                                                                <Setter Property="Padding" Value="0"/>
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                            </Style>
                                                            <Style TargetType="{x:Type DatePickerTextBox}">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate>
                                                                            <TextBox x:Name="PART_TextBox" Text="{Binding Path=SelectedDate, StringFormat='dd/MM/yyyy', RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" />
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="BorderThickness" Value="0"/>
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Setter Property="TextAlignment" Value="Center"/>
                                                                <Setter Property="Margin" Value="10, 0, 10, 0"/>
                                                            </Style>
                                                        </DatePicker.Resources>
                                                    </DatePicker>

                                                </DockPanel>

                                                <DockPanel
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="5">

                                                    <TextBlock
                                                    VerticalAlignment="Center"
                                                    Text="Ημ/νία λήξης"/>

                                                    <DatePicker SelectedDate="{Binding Path=LicenseForAutopsyDateExpiring}">
                                                        <DatePicker.Resources>
                                                            <Style TargetType="{x:Type DatePicker}">
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Setter Property="BorderThickness" Value="0"/>
                                                                <Setter Property="Padding" Value="0"/>
                                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                            </Style>
                                                            <Style TargetType="{x:Type DatePickerTextBox}">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate>
                                                                            <TextBox x:Name="PART_TextBox" Text="{Binding Path=SelectedDate, StringFormat='dd/MM/yyyy', RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" />
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="BorderThickness" Value="0"/>
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                                <Setter Property="TextAlignment" Value="Center"/>
                                                                <Setter Property="Margin" Value="10, 0, 10, 0"/>
                                                            </Style>
                                                        </DatePicker.Resources>
                                                    </DatePicker>

                                                </DockPanel>

                                            </Grid>

                                            <Grid
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right">

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Button
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Command="{Binding Path=AddLicenseForAutopsyCommand}">

                                                    <Image
                                                    Width="20"
                                                    Height="20"
                                                    Source="../../Images/add.png"/>

                                                </Button>

                                                <Button
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Command="{Binding Path=UpdateLicenseForAutopsyCommand}">

                                                    <Image
                                                    Width="20"
                                                    Height="20"
                                                    Source="../../Images/save.png"/>

                                                </Button>

                                                <Button
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                Command="{Binding Path=ClearLicenseForAutopsyInputsCommand}">

                                                    <Image
                                                    Width="20"
                                                    Height="20"
                                                    Source="../../Images/erase.png"/>

                                                </Button>

                                            </Grid>

                                        </Grid>

                                    </ScrollViewer>

                                </TabItem>

                            </TabControl>

                            <Grid
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalAlignment="Right">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Command="{Binding Path=AddAutopsyCommand}">

                                    <DockPanel>

                                        <Image
                                            Width="20"
                                            Height="20"
                                            Source="../../Images/add.png"/>

                                        <TextBlock Text="Προσθήκη Νέας"/>

                                    </DockPanel>

                                </Button>

                                <Button
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Command="{Binding Path=UpdateAutopsyCommand}">

                                    <DockPanel>

                                        <Image
                                            Width="20"
                                            Height="20"
                                            Source="../../Images/save.png"/>

                                        <TextBlock Text="Αποθήκευση Αλλαγών"/>

                                    </DockPanel>

                                </Button>

                                <Button
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Command="{Binding Path=ClearAutopsyInputsCommand}">

                                    <DockPanel>

                                        <Image
                                            Width="20"
                                            Height="20"
                                            Source="../../Images/erase.png"/>

                                        <TextBlock Text="Καθαρισμός"/>

                                    </DockPanel>

                                </Button>

                            </Grid>

                        </Grid>

                    </TabItem>

                </TabControl>

            </Grid>

        </Border>

    </Grid>

</UserControl>
